<div class="main">
    <div class="alignment">
        <div style="display:inline-block;vertical-align:top;">
            <img src="<%= assetPath('bandera-lateral.png') %>" width="40" height="498">
        </div>
        <div style="display:inline-block;">
            <div class="box">
                <h1 style="text-align:center"> <img src="<%= assetPath('cheffer-inicio.png') %>" width="100" height="50"></h1>
                <% if (locals.errors) { %>
                    <div class="errors">
                        <p> Debes ingresar todos los campos </p>
                    </div>
                <% } %>
                <form action="<%= createSessionPath %>" method="post">
                    <input type="hidden" name="_method" value="put" />
                    <div class = "field-alignment">
                        <label for="email">Email</label>
                        <input class="insert-text" type="email" name="email" value="<%= user.email%>" />
                        <label for="password">Password</label>
                        <input class="insert-text" type="password" name="password" />
                        <br>
                        <div class="field" style="text-align:center"> 
                            <input type="submit" name="sign-in" value="Sign In">
                        </div>
                    </div>
                </form>
            </div>
            <br>
            <div class="box">
                <p>Don't have an account? <a href="<%= createUserFormPath %>">Sign Up</a></p>
            </div>
        </div>
        <div class=filler></div>
    </div>
</div>
<div class="grey-backround"></div>
