                          <button class="save-button" type="submit" ><img src="<%=assetPath('saved.png')%>" width="25" height="25"></button>
                        </form>
                        <% } else {%> 
                        <form action="<%= savedPublicationPath(publication) %>" method="POST">
                          <input type="hidden" name="_method" value="PUT">
                          <button class="save-button" type="submit"><img src="<%=assetPath('save.png')%>" width="25" height="25"></button>
                        </form>
                        <% }%>  
                      </div>
                    </div>
