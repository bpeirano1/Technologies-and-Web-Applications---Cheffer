
 
  
  </div>
  <div class="main">
    <div class="alignment">
        <div id="bandera">
          <img src="<%= assetPath('bandera-lateral.png') %>" width="40" height="100%">
        </div>
        <div id="recuadro">
            <div class="box-feed">
              <% publicationsFiltered.forEach(publication => { %>
              <div class="field-alignment">
                <div class="box-separator">
                  <div class="field-alignment-row-sp">
                    <div class="round-pic">
                      <% if (publication.user.picture){ %>
                        <img class="profile-pic" src="<%= cloudinary.url(publication.user.picture, {transformation: [{width: 800, height: 800, gravity: 'face', radius: 'max', crop: 'crop'},{width: 200, crop: 'scale'}]}) %>" width="60" height="60">
                        <% } else {%> 
                        <img src="<%=assetPath('no-pic.png')%>" width="60" height="60">
                        <% }%> 
            
                    </div>
                    <div class="search-alignment">
                        <h2> <a href="<%= userPath(publication.user) %>"><%= publication.user.username %> </a> </h2>
                    </div>
                    
                  </div>
                </div>
              
                <div class="filler"></div>
                <div class="filler"></div>

               </div>
                      <div class="box-separator">
                        <div class="search-alignment">
                          <h3> <a href="<%= publicationPath(publication) %>"><%= publication.name %></a></h3>
                        </div>
                      </div>

                      <% if (publication.recipesPictures){ %>
                        <p> <img class="photo-content" src="<%= cloudinary.url(publication.recipesPictures) %>" > </p>
                        <% }%>
                        
                        <p> Ingredients: <%= publication.ingredients %></p>
                        <p> Preparation time (hours): <%= publication.time %></p>
                        <p> Steps: <%= publication.steps %></p>
                        <p>Description: <%= publication.description %></p>
                        <p>Know how many calories this preparation has! <a class="button" href="<%= questionApiPath(publication) %>"><span>Click here</span></a> </p>
                        <div class="field-alignment-row-sp">
                        
                        
                        <div class='react-like' data-publication="<%= JSON.stringify(publication.currentUserLikedPublication) %>" data-pub="<%= JSON.stringify(publication)%>" data-likes="<%= JSON.stringify(publication.likes)%>" >
                        </div>
                        

                        <div>
                          <% if (publication.currentUserSavedPublication){ %>
                            <form action="<%= unsavedPublicationPath(publication)%>" method="POST">
                              <input type="hidden" name="_method" value="DELETE">
                              <input type="submit" value="unsave">
                            </form>
                            <% } else {%> 
                            <form action="<%= savedPublicationPath(publication) %>" method="POST">
                              <input type="hidden" name="_method" value="PUT">
                              <input type="submit" value="save">
                            </form>
                            <% }%>  
                        </div>
                      </div>
                    <% }); %>
                    
                
            </div>
            <br>
        </div>
        <div class=filler></div>
    </div>
  </div>
  <div class="grey-backround"></div>
