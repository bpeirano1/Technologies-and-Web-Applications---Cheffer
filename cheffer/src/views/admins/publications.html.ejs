    <div class="alignment-admin">
      <div id="bandera">
        <img src="<%= assetPath('bandera-lateral.png') %>" width="40" height="100%">
      </div>
      <div class="">
        <table class="content-table" style="width:100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Ingredients</th>
              <th>Time</th>
              <th>Created By (id)</th>
              <th>Steps</th>
              <th>Ranking</th>
              <th>Description</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Delete</th>
            </tr>
          </thead>
          <% publications.forEach(publication => { %>
          <tbody>
            <tr>
              <td><%= publication.name %></td>
              <td><%= publication.ingredients %></td>
              <td><%= publication.time %></td>
              <td><%= publication.userId %></td>
              <td><%= publication.steps %></td>
              <td><%= publication.ranking %></td>
              <td><%= publication.description %></td>
              <td><%= publication.createdAt %></td>
              <td><%= publication.updatedAt %></td>
              <td>
                <form action="<%= adminDeletePublicationPath(publication) %>" method="POST">   
                  <input type="hidden" name="_method" value="DELETE">
                  <input class="delete-button" type="submit" value="Delete">  
                </form>
              </td>
            </tr>
          <% }); %>
          </tbody>
        </table>
      </div>
      <div class=filler> </div>
